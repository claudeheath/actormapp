<!DOCTYPE html>
<html lang="en">
	<head>
		<% include partials/head %>
		
		<script>

		</script>
		
	</head>
	<body class="container">
		<header>
			<% include partials/header %>
		</header>
		
		<main>
			<div class="jumbotron">
			<p>Project Space: <%= project.name %></p>
			</div>

		 <h2>List of Workshops</h2>

           <% if(typeof(errorMessage) !== 'undefined') {%>
              <span><%= errorMessage %></span>
           <% } %>
			<ul>	
			<% if(project.workshops) { %>	 
           <% project.workshops.forEach(function(workshop) { %>

			 <li><a href="/workshops/<%= workshop.id %>"><%= workshop.name %></a> <a href="/workshops/delete/<%= workshop.id %>">X</a></li>

		<% }); %>
			<% } %>
			</ul>
		<hr>
		<h2>Add New Workshop</h2>
		<form method="post" action="/workshops/add">
	 
           <% if(typeof(errorMessage) !== 'undefined') {%>
              <span><%= errorMessage %></span>
           <% } %>
	 
           <div class="form-group">

		 	<label for="name">Name</label>
            <input type="text" class="form-control" name="name" id="name"/> <br>
			<input type="hidden" name="project_id" id="project_id" value="<%= project._id %>"
	        <p>
	           <button type="submit" name="submit" id="submit" class="btn btn-default">Add</button>
	        </p>
			</div>
			</form>
			<hr>
			
			<h2>Add a demo workshop</h2>
			<form method="post" action="/support/testdata">
            <div class="form-group">

 		 	<label for="name">Name</label>
             <input type="text" class="form-control" name="name" id="name"/> <br>
 			<input type="hidden" name="project_id" id="project_id" value="<%= project._id %>"
 	        <p>
 	           <button type="submit" name="submit" id="submit" class="btn btn-default">Pre-populate</button>
 	        </p>
 			</div>
		
	     </form>

	</main>		
	<footer>
		<% include partials/footer %>
	</footer>
	</body>
</html>