<!DOCTYPE html>
<html lang="en">
	<head>
		<% include partials/head %>

		<script>
		var counter = 1;
		
		function addInput(divName){
    	
        	var newdiv = document.createElement('div');
          	newdiv.innerHTML = "<input type='text' name='label'> <input type='text' name='value'>";
          	document.getElementById(divName).appendChild(newdiv);
          	counter++;
     	
		}

	
		</script>
	</head>
	<body class="container">
		<header>
			<% include partials/header %>
		</header>
		
		<main>
			<div class="jumbotron">

			<div>
		 
		 <h2>List of Projects</h2>

           <% if(typeof(errorMessage) !== 'undefined') {%>
              <span><%= errorMessage %></span>
           <% } %>
			<table class="table table-striped">		
			<% if(projects) {%>
           <% projects.forEach(function(project) { %>

			 <tr>
				 <td><a href="/projects/<%= project._id %>"><%= project.name %></a></td> 
				 <td><a href="/projects/delete/<%= project._id %>" type="delete" class="btn btn-default" role="button">delete</a></td>
			 </tr>

		<% }); %>
			<% } %>
			</table>
		<hr>
		<h2>Add New Project</h2>
		<form method="post" action="/projects/add" role="form" data-toggle="validator" class="form-horizontal">
		<input type="hidden" name="_method" value="put" />
	 
           <% if(typeof(errorMessage) !== 'undefined') {%>
              <span><%= errorMessage %></span>
           <% } %>
	 
           <div class="form-group">

		 	<label for="name" class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10">
            	<input type="text" class="form-control" name="name" id="name" required/> <br>
			</div>
		</div>
		<div class="form-group">
			 	<label for="problemtext" class="col-sm-2 control-label">Problem Definition</label>
				<div class="col-sm-10">
	            <input type="text" class="form-control" name="problemtext" id="problemtext" required/> <br>
				</div>
			</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
	           <button type="submit" name="submit" id="submit" class="btn btn-default">Create</button>
		   </div>
		   </div>

	     </form> 
		 
		 
		</main>
		
		<footer>
			<% include partials/footer %>
		</footer>
	</body>
</html>