<!DOCTYPE html>
<html lang="en">
	<head>
		<% include partials/head %>

		<script>
		var counter = 1;
		
		function addInput(divName){
    	
        	var newdiv = document.createElement('div');
          	newdiv.innerHTML = "<input type='text' name='label'> <input type='text' name='value'>";
          	document.getElementById(divName).appendChild(newdiv);
          	counter++;
     	
		}

	
		</script>
	</head>
	<body class="container">
		<header>
			<% include partials/header %>
		</header>
		
		<main>
			<div class="jumbotron">

			<div>
		 
		 <h2>List of Projects</h2>

           <% if(typeof(errorMessage) !== 'undefined') {%>
              <span><%= errorMessage %></span>
           <% } %>
			<ul>		 
           <% docs.forEach(function(project) { %>

			 <li><a href="/projects/<%= project._id %>"><%= project.name %></a></li>

		<% }); %>
			</ul>
		<hr>
		<h2>Add New Project</h2>
		<form method="post" action="/projects/add" role="form" data-toggle="validator" class="form-horizontal">
		<input type="hidden" name="_method" value="put" />
	 
           <% if(typeof(errorMessage) !== 'undefined') {%>
              <span><%= errorMessage %></span>
           <% } %>
	 
           <div class="form-group">

		 	<label for="name">Name</label>
            <input type="text" class="form-control" name="name" id="name" required/> <br>
			<label for="name">Project & Problem Definition</label>
			<input type="text" class="form-control" name="definition" id="definition" required/> <br>
	        <p>
	           <button type="submit" name="submit" id="submit" class="btn btn-default">Add</button>
	        </p>
		  </div>

	     </form>
		</main>
		
		<footer>
			<% include partials/footer %>
		</footer>
	</body>
</html>