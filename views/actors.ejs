<!DOCTYPE html>
<html lang="en">
	<head>
		<% include partials/head %>

		<script>
		var counter = 1;
		
		function addInput(divName){
    	
        	var newdiv = document.createElement('div');
          	newdiv.innerHTML = "<input type='text' name='label'> <input type='text' name='value'>";
          	document.getElementById(divName).appendChild(newdiv);
          	counter++;
     	
		}

	
		</script>
	</head>
	<body class="container">
		<header>
			<% include partials/header %>
		</header>
		
		<main>
			<div class="jumbotron">

			<div>
		
        <form method="post" action="/actors/add">
		 
           <% if(typeof(errorMessage) !== 'undefined') {%>
              <span><%= errorMessage %></span>
           <% } %>
		 
           <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" name="name" id="name"
                 placeholder="name" required="true"/>

           </div>

           <div id="dynamicInput">
          		<input type="text" id="label1" name="label"> <input type="text" id="value1" name="value"> 
     		</div>
     		<input type="button" value="+" onClick="addInput('dynamicInput');">
		   
	          <p>
	             <button type="submit" name="submit" id="submit" class="btn btn-default">Add the actor</button>
	          </p>
			
	       </form>

		</main>
		
		<footer>
			<% include partials/footer %>
		</footer>
	</body>
</html>